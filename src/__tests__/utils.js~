import utils from '../utils.js';

class MockStore {
    constructor() {
        this.actionHistory = [];
        this.dispatch = jest.fn(function(action) {
            actionHistory.push(action);
        });
        this.getState = jest.fn();
    }
};

describe(`the dispatchAction function`, function() {
    const mockRouteMaps = [{
        route: `/page1`,
        component: `foo`
    }, {
        route: `/page2`,
        component: `bar`
    }];
    const mockRoute = `/page1`;
    const mockStore = new MockStore();

    it(`creates a Flux Standard Action`, function() {
        utils.dispatchAction(mockRouteMaps, mockRoute, mockStore);

        expect(mockStore.actionHistory[0]).toEqual({foo: `bar`});
    });
});
